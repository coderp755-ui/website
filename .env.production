# Production Environment Variables for Render

# Django Settings
DEBUG=False
SECRET_KEY=your-production-secret-key-here

# Allowed Hosts (add your Render domain)
ALLOWED_HOSTS=localhost,127.0.0.1,grace-qve9.onrender.com

# CORS Allowed Origins (add your frontend domain)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:5173

# PostgreSQL Database URL from Render
# Get this from your Render PostgreSQL dashboard
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Example:
# DATABASE_URL=postgresql://user:pass@dpg-xxxxx-a.oregon-postgres.render.com/dbname